  \begin{beamercolorbox}[sep=.5ex,dp=0.6ex,leftskip=0.5ex,rightskip=0.5ex,vmode]{block body alerted}%
  }
  
\setbeamertemplate{block alerted end}
{\end{beamercolorbox}\vskip\smallskipamount}

